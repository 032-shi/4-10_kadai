<div class="container">
  <div class="row">
    <div class='mx-auto col-xl-6'>
      <h1>Editing Book</h1>
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <div><%= f.submit "Update Book", class: "newbookbtn" %></div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      <span>|</span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>