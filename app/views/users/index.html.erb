<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>