<div class="container">
  <div class="row">
    <div class='mx-auto col-xl-6'>
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <div id="errorm">
          <h3><%= @user.errors.count %>error prohibited this obj from being saved</h3>
          <% @user.errors.full_messages.each do |message| %>
            <ul>
              <li><%= message %></li>
            </ul>
          <% end %>
        </div>
      <% end %>

      <%= form_with model:@user, local:true do |f| %>
        <div class=form-group>
          <label>Name</label>
          <div><%= f.text_field :name, autofocus: true, placeholder:"名前"%></div>
        </div>

        <div class=form-group>
          <label>ProfileImage</label>
          <div><%= f.attachment_field :profile_image, placeholder: "選択されていません" %></div>
        </div>

        <div class=form-group>
          <label>Introduction</label>
          <div><%= f.text_field :introduction, autofocus: true, placeholder:"自己紹介"%></div>
        </div>

        <div class=form-group>
        <%= f.submit "Update User", class: "userupdatebtn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>